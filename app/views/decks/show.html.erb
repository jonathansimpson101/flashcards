<div class="container">
  <%= link_to "Back to Dashboard", dashboard_path, class:"back-to-dash-button"%>
  <h2 id="overivew-header"><%= @deck.name %></h2>
  <% if @deck.cards.count != 0 %>
    <h4 class="text-center"><%= @deck.cards.count %> <%= image_tag "https://res.cloudinary.com/flashcard/image/upload/v1615289621/Landing-page%20background%20and%20logo/cards-icon.png", class: "cards-icon" %></h4>
  <% end %>

  <div class="buttons-container">
    <% if policy(@deck).edit? %>
      <%= link_to "Edit this deck", edit_deck_path %>
    <% end %>
    <% if !@deck.cards.empty? %>
      <%= link_to "Study this deck", deck_card_path(@deck), id: "deck-show-study-deck-button" %>
    <% end %>
    <% if policy(@deck).destroy? %>
      <%= link_to "Delete this deck", deck_path , method: :delete, data: { confirm: 'Are you sure you want to delete?' }, id: "deck-show-delete-deck-button" %>
    <% end %>
  </div>

  <% if @deck.cards.count != 0 %>
    <h4 id="cards-show-header">Cards:</h4>
    <div id="cards-container">
      <% @deck_cards.each do |card| %>
        <div class="card-overview">
           <%= card.question %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="no-cards-content">
      <h3>You've not added any cards yet...</h3>
      <p>Head back to your dashboard to add some now.</p>
    </div>
  <% end %>
</div>
