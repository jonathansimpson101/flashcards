<div class="container">
  <%#= link_to "Finish", results_deck_path(@deck) , class: "btn btn-sucsess" %>


  <span class="counter">
    <div class="card-total">
      <h6>No. of Cards: <%= @deck.cards.count %></h6>
    </div>
    <div class="card-completed">
      <h6 class="attempt_score">No. of Correct Cards: <%= @deck.cards.count %></h6>
    </div>
  </span>

  <% @deck.cards.each_with_index do |card, index| %>
  <div id="card" class="<%= 'hideCard' unless index.zero? %>" >
    <div class="attempt-side">
      <div class="card-question">
        <h3><%= card.question %></h3>
      </div>
      <%= simple_form_for "#{card}", remote: true do |f| %>
        <%= f.input :attempt, id:"user_attempt", input_html: {class: "attempt_#{index}"} %>
      <% end %>
      <button id="flipButton" class="btn"><i class="fas fa-redo-alt"></i></button>
    </div>

    <div class="answer-side hideCard">
      <div class="card-question">
        <%= card.question %>
      </div>
      <div class="card-attempt">
        <%=  %>
      </div>
      <div class="card-answer">
        <%= card.answer %>
      </div>
      <span class="button-correct">
        <button><i id="correct" class="far fa-check-circle"></i></button>
        <button><i id="incorrect" class="fas fa-times"></i></button>
      </span>
    </div>
  </div>
  <% end %>
</div>

