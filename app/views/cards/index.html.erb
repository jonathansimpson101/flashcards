<div class="container">

  <%= link_to "Back to dasboard", dashboard_path, class: "back-to-dash-button" %>

  <h3 id="deck-search-header">Deck Search</h3>

    <div class="search-bar select2">
    <%= form_tag decks_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control select2",
      placeholder: "Search through public decks..."%>
      <%= submit_tag "Search", class: "btn btn-primary", id: "deck-search-button" %>
    <% end %>
  </div>

  <% @cards.each do |card| %>
    <div class="line-container">
      <div class="deck-container">
        <h5><strong><%= card.question %></strong>
        <h5><strong><%= card.answer %></strong>
        <h5><strong>Made by: </strong>
          <% if card.user_id.present? %>
            <% user = card.user_id %>
            <%= User.find_by_id(user) %>
          <% else %>
            N/A
          <% end %>
        </h5>
      </div>
      <div class="study-now-container">
         <%= link_to "Edit this card" %>
      </div>
      <div class="study-now-container">
         <%= link_to "Delete this card"%>
      </div>
    </div>
  <% end %>

</div>
