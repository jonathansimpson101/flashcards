<div class="container">
  <%= link_to "Back to Dashbord", dashboard_path, class: "btn btn-primary", class:"back-to-dash-button"%>
  <h1 id="overivew-header"><%= @deck.name %></h1>
  <h3>There are <%= @deck.cards.count %> cards in this deck</h3>

  <div class="buttons-container">
    <%= link_to "Edit this deck", edit_deck_path %>
    <%= link_to "Delete this deck", deck_path , method: :delete %>
    <%= link_to "Study this deck", deck_card_path(@deck) %>

  </div>

  <h3>Cards:</h3>
  <div id="cards-container">
    <% @deck_cards.each do |card| %>
      <div class="card-overview">
         <%= card.question %>
      </div>
    <% end %>
  </div>
</div>
