<div class="container">
  <button class="finish-now"></button>


  <span class="counter">
    <div class="card-total">
      <h6>No. of Cards: <%=  %></h6>
    </div>
    <div class="card-completed"></div>
  </span>


  <div class="card" id="attempt-side">
    <div class="card-question"></div>
    <div class="card-attempt"></div>
  </div>
  <span class="button">
    Flip
  </span>



  <div class="card" id="answer-side">
    <div class="card-question"></div>
    <div class="card-attempt"></div>
    <div class="card-answer"></div>
  </div>
  <span class="button-correct">
    <i class="far fa-check-circle"></i>
    <i class="fas fa-times"></i>
  </span>
</div>

